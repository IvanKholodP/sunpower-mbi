      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      // "sourceMap": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "skipLibCheck": true
   },
   "exclude": [
      "client"
   ]
}